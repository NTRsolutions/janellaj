<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_15dp"
        android:background="#fff"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="@dimen/_5dp"
        card_view:elevation="@dimen/_5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                android:layout_marginTop="@dimen/_15dp"
                android:text="Manage Locations Timings"
                android:textAlignment="center"
                android:textSize="@dimen/_18dp"
                />


            <TextView
                android:id="@+id/titleHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                android:layout_marginTop="@dimen/_15dp"
                android:text="Je Clicnic, Jasola Area, ND"
                android:textAlignment="center"
                android:textSize="@dimen/_18dp"
                android:textColor="#000"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SUN"
                    android:textAlignment="center"
                    android:textSize="@dimen/_16dp"
                    android:textColor="#000"
                   />

                <TextView
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:text="MON"
                    android:gravity="center"
                    android:background="@drawable/circle_bg"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:textSize="@dimen/_16dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TUE"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:textSize="@dimen/_16dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="WED"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:textSize="@dimen/_16dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="THU"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:textSize="@dimen/_16dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FRI"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:textSize="@dimen/_16dp"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SAT"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:textSize="@dimen/_16dp"
                   />


            </LinearLayout>


            <ExpandableListView
                android:id="@+id/lvExp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/_10dp"
                android:groupIndicator="@null"
                android:layout_weight="1"
                android:cacheColorHint="@android:color/transparent"
                android:dividerHeight="@dimen/_10dp"
                android:divider="@drawable/expandable_selector"
                android:childDivider="@drawable/expandable_selector"
                android:background="@android:color/transparent"
                android:padding="@dimen/_5dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/addlocation"
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="@dimen/_50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_22dp"
                    android:background="@color/centercolor"
                    android:src="@drawable/ic_add"
                    app:backgroundTint="@color/bgcolor" />

                <Button
                    android:id="@+id/btn_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_15dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/login_border"
                    android:gravity="center"
                    android:minWidth="@dimen/_160dp"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>